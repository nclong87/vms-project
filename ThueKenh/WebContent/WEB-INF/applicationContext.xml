<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<bean id="jdbcDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@192.168.1.105:1521:TEST" />
        <property name="username" value="THUEKHOAN" />
        <property name="password" value="123456" />       
    </bean>
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/ORACLE_VMS" />
		<property name="resourceRef" value="true"/>
		<property name="proxyInterface" value="javax.sql.DataSource" />
		<property name="lookupOnStartup" value="true" />
	</bean>
	<bean id="daoFactory" class="vms.db.dao.DaoFactory">
		<property name="dataSource" ref="dataSource"/>
		<property name="jdbcDataSource" ref="jdbcDataSource"/>
	</bean>
   
	<!-- Class Action -->
	<bean id="testAction" scope="prototype" class="vms.web.actions.TestAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="loginAction" scope="prototype" class="vms.web.actions.LoginAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="indexAction" scope="prototype" class="vms.web.actions.IndexAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="userAction" scope="prototype" class="vms.web.actions.UserAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="ajaxAction" scope="prototype" class="vms.web.actions.AjaxAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="groupAction" scope="prototype" class="vms.web.actions.GroupAction">
        <constructor-arg ref="daoFactory" />
    </bean>
	<bean id="permissionAction" scope="prototype" class="vms.web.actions.PermissionAction">
        <constructor-arg ref="daoFactory" />
    </bean>
    <bean id="phongbanAction" scope="prototype" class="vms.web.actions.DanhMucPhongBanAction">
        <constructor-arg ref="daoFactory" />
    </bean>
    <bean id="khuvucAction" scope="prototype" class="vms.web.actions.DanhMucKhuVucAction">
        <constructor-arg ref="daoFactory" />
    </bean>
    <bean id="doitacAction" scope="prototype" class="vms.web.actions.DanhMucDoiTacAction">
        <constructor-arg ref="daoFactory" />
    </bean>
    <bean id="duanAction" scope="prototype" class="vms.web.actions.DanhMucDuAnAction">
        <constructor-arg ref="daoFactory" />
    </bean>
</beans>

